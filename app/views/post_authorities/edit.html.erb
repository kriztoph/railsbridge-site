<% content_for(:head) do %>
	<%= stylesheet_link_tag 'post_authorities'%>
<% end %>
<h1>Edit Post</h1>
<% form_for @post do |f| %>
	<fieldset>
		<%= f.hidden_field :id %>
		<p>
			<%= f.label 'title'%><br/>
			<%= f.text_field :title %>
		</p>
		<p>
			<%= f.label 'rails_version'%><br/>
			<%= f.text_field :rails_version %>
		</p>
		<p>
			<%= f.label 'reference_module', 'Reference'%><br/>
			<%= f.text_field :reference_module %>
		</p>
		<p>
			<%= f.label 'status'%><br/>
			<%= f.select :status, PostAuthority.status_tokens_for_key_select%>
		</p>
		<p>
			<%= f.submit 'Save'%> | <%= link_to 'Back', post_authorities_url %>
		</p>
	</fieldset>
	<h2>Preview</h2>
	<iframe src="<%= @post.permlink %>"></iframe>
<% end %>
